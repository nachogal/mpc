<body class="bg-purple">
	<section>
		<div class="container">
		<div class="col-lg-12">
			<div class="box">
				<div class="box-content centered">
					<h1 id="create">Log In</h1>

					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					  <div class="form-inputs">
					    <div class="input email optional user_email">
					    <label class="email optional" for="user_email"></label>
					    <input class="string email optional" autofocus="autofocus" placeholder="Email" type="email" value="" name="user[email]" id="user_email">
					    </div>

					    <div class="input password optional user_password">
					    <label class="password optional" for="user_password"></label>
					    <input class="password optional" placeholder="Password" type="password" name="user[password]" id="user_password"></div>

					    <div class="input boolean optional user_remember_me">
					    <input value="0" type="hidden" name="user[remember_me]">
					    <label class="boolean optional checkbox" for="user_remember_me">
					    <input class="boolean optional" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">Remember me</label>
					    </div>
					  </div>

					  <div class="form-actions">
					    <input type="submit" name="commit" value="Log in" class="btn">
					  </div>
					<% end %>

					<%= render "devise/shared/links" %>
				</div>	
			</div>	
		</div>
		</div>	
	</section>
</body>	
