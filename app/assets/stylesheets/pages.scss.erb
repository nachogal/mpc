.box {
  margin-right: auto;
  margin-left: auto;
  text-align: center;
  background-color: #fff;
  margin-top: 4rem;
  margin-bottom: 1rem;
  padding: 0;
  border-radius: 0rem;
  width: 20rem;
  -webkit-box-shadow: 20px 20px 40px -10px rgba(0,0,0,0.6);
  -moz-box-shadow: 20px 20px 40px -10px rgba(0,0,0,0.6);
  box-shadow: 20px 20px 40px -10px rgba(0,0,0,0.6);

  .box-content {
    padding: 1.5rem;
  }

  #create {
    text-align: center;
  }
}

.navbar {
  margin-bottom: 0;
  -webkit-transition: background 0.3s ease-in-out;
  -moz-transition: background 0.3s ease-in-out;
  -o-transition: background 0.3s ease-in-out;
  transition: background 0.3s ease-in-out;
}

.navbar-default {
  padding: 0 0;
  background-color: transparent;
  border: 0;
  /* box-shadow: 0px -10px 40px 0px rgba(193,198,199,1); */
}

.navbar .navbar-nav {
  display: inline-block;
  float: none;
  vertical-align: top;
}

.navbar .navbar-collapse {
  text-align: right;
  margin-top: 1rem;
  margin-bottom: 1rem;
}

.navbar-brand img {
  max-height: 3rem;
  padding-bottom: 0.3rem;
  float: left;
  top: 50%;
  transform: translateY(10%);
  -webkit-transition: max-height 0.3s ease-in-out;
  -moz-transition: max-height 0.3s ease-in-out;
  -o-transition: max-height 0.3s ease-in-out;
  transition: max-height 0.3s ease-in-out;
}

.navbar-default .navbar-nav>li>a {
  font-family: 'Gotham Light', sans-serif;
  font-size: 0.9rem;
  letter-spacing: 0rem;
  text-transform: uppercase;
  color: white;
  padding-top: 0.7rem;
  padding-bottom: 0.7rem;
  margin-left: 0.4rem;
  margin-right: 0.4rem;
  border-bottom: 0.1rem solid transparent;
  -webkit-transition: font-size 0.3s ease-in-out;
  -moz-transition: font-size 0.3s ease-in-out;
  -o-transition: font-size 0.3s ease-in-out;
  transition: font-size 0.3s ease-in-out;
}

.navbar-default .navbar-nav>li>a:hover {
  border-bottom: 0.1rem solid white;
  color: white;
  opacity: 1;
}

.navbar-default .navbar-nav>li>a:focus {
  border-bottom: 0.1rem solid white;
  color: white;
  opacity: 1;
}

.navbar-toggle {
  border: 0px solid white;
  border-radius: 0px;
}

.navbar-default .navbar-toggle .icon-bar {
  background-color: white;
}

