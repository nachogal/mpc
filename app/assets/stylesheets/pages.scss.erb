$primary-color: #4369a9; // blue
$secondary-color: #e41220; // orange
$black: #333;
$grey: #999;
$background-grey: #eef2f3;

.bg-grey {
  background-color: $background-grey;
}

.bg-purple {
  height: 20rem;
  background: linear-gradient(270deg, #5544a2, #4369a9, #2c457e);
  background-size: 600% 600%;

  -webkit-animation: AnimationName 8s ease infinite;
  -moz-animation: AnimationName 8s ease infinite;
  animation: AnimationName 8s ease infinite;

  @-webkit-keyframes AnimationName {
      0%{background-position:0% 50%}
      50%{background-position:100% 50%}
      100%{background-position:0% 50%}
  }
  @-moz-keyframes AnimationName {
      0%{background-position:0% 50%}
      50%{background-position:100% 50%}
      100%{background-position:0% 50%}
  }
  @keyframes AnimationName { 
      0%{background-position:0% 50%}
      50%{background-position:100% 50%}
      100%{background-position:0% 50%}
  }
}

#intro {
  padding-top: 0;
}

.top {
  margin: 0;
  padding: 0;
  width: 100%;
  height: auto;
}

.carousel-caption {
  top: 50%;
  transform: translateY(-50%);
}

.become {
  top: 50%;
  transform: translateY(-70%);
}

.education {
  top: 50%;
  transform: translateY(170%);
}


.carousel-control.right {
  top: 50%;
  right: -40px;
  background-image: none;
}

.carousel-control.left {
  top: 50%;
  left: 40px;
  background-image: none;
}

.arrow {
  vertical-align: middle;
  height: 60px;
  width: auto;
  padding-right: 100px;
  padding-left: 0px;
  text-align: center;
  cursor: pointer;
}

.carousel-indicators {
  @media screen and (min-width: 768px){
    bottom: 4rem;
  }
}

.carousel .carousel-indicators li {
  height: 1rem;
  width: 1rem;
  margin: 0.3rem;
  border-width: 2px;
}

.innovamos {
  margin-top: 1rem;
  text-align: center;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.logo {
  max-width: 6rem;
  margin-top: 1.5rem;
}

.diferencias { 
  padding-right: 6rem;
  padding-left: 6rem;
}

#teammates { 
  
  img {
    margin-bottom: 20px;
  }
}

.box {
  background-color: #fff;
  margin-top: 1.5rem;
  margin-bottom: 1rem;
  padding: 0;
  border-radius: 15px;

  img {
    width: 100%;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px
  }

  .box-content {
    padding: 1.5rem;
  }

  h3 {
    color: $primary-color;
    font-size: 1.3rem;
    font-weight: 800;
    letter-spacing: 0rem;
    text-align: left;
    margin-bottom: 1rem;
    text-transform: none;
  }
}

#solutions .box p {
  @media (min-width: 992px) {
    height: 4rem;
  }
}

#solutions {  
  @media (max-width: 767px) {
    padding-left: 5.5rem;
    padding-right: 5.5rem;
  }
}

#features ul {
  @media (max-width: 991px) {
    display: inline-block;
    list-style: none;
    text-align: center;
    padding-left: 10px;
  }
}

.navbar {
  margin-bottom: 0;
}

.navbar-default {
  padding: 0 0;
  background-color: transparent;
  border: 0;
  /* box-shadow: 0px -10px 40px 0px rgba(193,198,199,1); */
}

.navbar .navbar-nav {
  display: inline-block;
  float: none;
  vertical-align: top;
}

.navbar .navbar-collapse {
  text-align: right;
}

.navbar-brand img {
  margin-top: 5px;
  max-height: 60px;
  float: left;
}

.navbar-default .navbar-nav>li>a {
  font-family: 'Gotham Light', sans-serif;
  font-size: 0.9rem;
  font-weight: 200;
  letter-spacing: 0rem;
  text-transform: uppercase;
  color: white;
  border-left: normal $primary-color;
  padding-top: 2rem;
}

.copyright {
  font-family: 'Geo', sans-serif;
  font-weight: 100;
  font-size: 1rem;
}

footer {
  padding: 20px 0;
  p {
    margin: 0;
  }
}
